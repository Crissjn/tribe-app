<div class="homepage">
  
  <header class="header">
    <div class="header-content">
      <h1 class="header-title">Hi Kriste!</h1>
      <button class="notification-icon" aria-label="Notifications">🔔</button>
    </div>
  </header>

  
  <div class="search-bar">
    <input type="text" class="search-input" placeholder="Have some topics to cover?" aria-label="Search topics" />
    <button class="search-button" aria-label="Search">Search</button>
  </div>

  
  <div class="categories">
    <% categories = [
      { emoji: "📸", label: "View", active: true },
      { emoji: "🌱", label: "Nature", active: false },
      { emoji: "🏖️", label: "Beach", active: false },
      { emoji: "🍴", label: "Food Lover", active: false }
    ] %>

    <% categories.each do |category| %>
      <button class="category-button <%= 'active' if category[:active] %>" aria-pressed="<%= category[:active] %>">
        <%= category[:emoji] %> <%= category[:label] %>
      </button>
    <% end %>
  </div>

  
  <section class="content-section">
    <h2 class="section-title">Popping now by view</h2>
    <div class="content-grid">
      <% content = [
        { image: 'desert.jpeg', alt: 'Amazing desert view', text: 'On my next trip to Greece will have a spot here', author: 'Mimi' },
        { image: 'greece.jpeg', alt: 'View of Greece', text: 'The 25 Best Things to Do and See in Norway', author: 'Leo' },
        { image: 'norway.jpeg', alt: 'Stunning Norway scenery', text: 'Amazing desert views', author: 'User' }
      ] %>

      <% content.each do |item| %>
        <div class="card">
          <%= image_tag item[:image], alt: item[:alt], class: 'card-image' %>
          <div class="card-info">
            <p class="card-text"><%= item[:text] %></p>
            <span class="card-author">By <%= item[:author] %></span>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  
  <%= render 'shared/footer', current_page: 'feed' %>
</div>